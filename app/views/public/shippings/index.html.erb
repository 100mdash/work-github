<div class="container py-5">
  <h5>配送先登録/一覧</h5>
  <div class="row">
    <div class="col-9 mx-auto">
      <%=form_with model: @shipping,url: public_shippings_path,local:true do |f|%>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td><%= f.label :zip_code, '郵便番号（ハイフンなし）'%></td>
            <td><%= f.text_field :zip_code, placeholder:"（例）0000000", class: 'form-control zip_code' %></td>
          </tr>
          <tr>
            <td><%= f.label :address, '住所'%></td>
            <td><%= f.text_field :address,placeholder:"東京都渋谷区代々木神園町0-0", class: 'form-control address' %></td>
          </tr>
          <tr>
            <td><%= f.label :name,'宛名'%></td>
            <td><%= f.text_field :name,placeholder:"木口裕太", class: 'form-control name' %></td>
            <td><%= f.submit '新規登録',class: "btn btn-success" %></td>
          </tr>
        </tbody>
      </table>
      <% end %>
    <table class="table table-bordered thead-dark">
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% @shippings.each do |shipping| %>
        <tr>
          <td><%= shipping.zip_code%></td>
          <td><%= shipping.address%></td>
          <td><%= shipping.name%></td>
          <td>
            <%= link_to '編集する',edit_public_shipping_path(shipping.id), class: "mx-3 btn btn-success" %>
            <%= link_to '削除する',public_shipping_path(shipping.id),method: :delete, class: " btn btn-danger" %>
          </td>
        </tr>
      </tbody>
      <% end %>
    </table>
   </div>
  </div>
</div>
