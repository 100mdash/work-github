<div class="container py-5">
  <h5>配送先編集</h5>
  <div class="row">
    <div class="col my-2">
      <%= form_with model:@shipping,url:public_shipping_path,local:true do |f| %>
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td><%= f.label :zip_code,'郵便番号（ハイフンなし）' %></td>
              <td><%= f.text_field :zip_code,placeholder:"(例)0000000", class: 'form-control zip_code' %></td>
            </tr>
            <tr>
              <td><%= f.label :address,'住所' %></td>
              <td><%= f.text_field :address, placeholder:"東京都渋谷区代々木神園町0-0", class: 'form-control address' %></td>
            </tr>
            <tr>
              <td><%= f.label :name,'宛名' %></td>
              <td><%= f.text_field :name,placeholder:"木口裕太", class: 'form-control name' %></td>
              <td><%= f.submit '変更を保存する',class: "btn btn-success" %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>