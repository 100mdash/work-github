<div class="row">
	<div class="col-xs-offset-1 col-xs-8">
		<h2 class="head-line text-center title_h2">マイページ</h2>
			<%= link_to " 編集する", edit_public_customers_path(current_customer), class: "glyphicon glyphicon-pencil btn btn-success" %>

			<table class="table table-bordered table-condensed" >
				<therd>
          <tr>
            <th>氏名</th>
            <th>カナ</th>
            <th>郵便番号</th>
            <th>住所</th>
            <th>電話番号</th>
            <th>メールアドレス</th>
          </tr>
        </therd>
				<tbody>
						<tr>
							<td><%= @customer.first_name+@customer.secound_name%></td>
							<td><%= @customer.first_name_alias+@customer.secound_name_alias %></td>
							<td class="text-left"><%= @customer.zip_code %></td>
							<td class="text-left"><%= @customer.address %></td>
							<td class="text-left"><%= @customer.tel_number %></td>
							<td class="text-left"><%= @customer.email %></td>
						</tr>
				</tbody>
			</table>

			<div class="mypage-bottoms">
				<P><strong class="shipping-link">配送先</strong>
					<%= link_to " 一覧を見る", public_shippings_path, class: "glyphicon glyphicon-folder-open btn btn-info" %>
				</p>
				<p><strong class="order-link">注文履歴</strong>
					<%= link_to " 一覧を見る", public_orders_path, class: "glyphicon glyphicon-folder-open btn btn-info" %>
				</p>
			</div>
	</div>
</div>