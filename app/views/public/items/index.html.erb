<div class="container">
  <%= render 'search' %>
  <h2>商品一覧<span class="font-weit-nomal small">(全<%= @items.count %>件)</span></h2>
    <div class="row" style="flex-wrap:wrap;">
      <% @items.each do |item| %>
      <div class="mx-5">
        <%= link_to public_item_path(item) do %>
          <%= attachment_image_tag(item, :image, :fill, 80, 80) %>
          <p><%=item.name%></p>
        <% end %>
        <p>¥<%= item.price.to_s(:delimited) %>(税抜)</p>
      </div>
    <% end %>
  </div>
    <%= paginate @items %>
</div>
