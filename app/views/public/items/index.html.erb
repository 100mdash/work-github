<div class="container">
  <div class="row">
      <h1>商品一覧(全<%= @items.count %>件)</h1>
      <% @items.each do |item| %>
      <div class="item">
          <%= attachment_image_tag item, :image %>
          <p><%= item.name %></p>
          <p>¥<%= item.price.to_s(:delimited) %>(税抜き)</p>
      </div>
      <% end %>
  </div>
</div>
