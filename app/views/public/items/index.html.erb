<div class="container py-5">
  <div class="row">
    <div class="col-3">
      <%= render 'search' %>
    </div>
    <div class="col-9">
      <div class="item-index mb-5">
        <h3>商品一覧<span class="font-weit-nomal small">(全<%= @items.count %>件)</span></h3>
      </div>
      <div class="row" style="flex-wrap:wrap;">
        <% @items.each do |item| %>
          <% if item.is_active != false %>
            <div class="col mx-3">
              <%= link_to public_item_path(item) do %>
                <%= attachment_image_tag(item, :image, :fill, 200, 150) %>
                <p><%= item.name %></p>
              <% end %>
              <p>¥<%= item.price.to_s(:delimited) %>(税抜)</p>
            </div>
          <% end %>
        <% end %>
      </div>
      <%= paginate @items %>
    </div>
  </div>
</div>
