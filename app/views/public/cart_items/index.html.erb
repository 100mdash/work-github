<div class="containar">
  <div class="row col-md-12">
    <h2 class="row col-8 mx-auto my-4">ショッピングカート</h2>
    <div class="row">
      <div class="btn btn-warning"><%= link_to "カートを空にする",public_cart_items_destroy_all_path(@cart_item), method: :delete %></div>
    </div>
      <div class="row col-12 mx-auto">
        <table class="table table-striped  table-hover col-6 offset-6 mx-auto text-center">
          <thead class="thead-dark">
            <tr>
              <th>商品名</th>
              <th>単価(税込み)</th>
              <th>数量</th>
              <th>小計</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% total=0 %>
            <% @cart_items.each do |cart_item| %>
             <tr>
               <td>
                 <%= attachment_image_tag cart_item.item, :image %>
                 <%= cart_item.item.name %>
               </td>
               <td><%= cart_item.item.add_tax_price.to_s(:delimited) %></td>
                <td>
                 <%= form_with model:[:public, cart_item], local:true do |f| %>
                 <%= f.select :count, options_for_select(@numbers, {selected: cart_item.count.to_i} ) %>
                 <%= f.submit"更新", class: "btn btn-success" %>
                 <% end %>
                </td>
                <td> <%= (cart_item.item.add_tax_price.to_s(:delimited).to_i)*cart_item.count %></td>
                <td class="btn btn-warning"><%= link_to "削除する",public_cart_item_path(cart_item), method: :delete %></td>
                <% total += ((cart_item.item.add_tax_price.to_s(:delimited).to_i)*cart_item.count) %>
             </tr>
            <% end %>
            <td></td>
            <td><%= link_to ' 買い物を続ける',public_items_path,class: 'btn btn-success  text-light' %></td>
            <td>合計金額</td>
            <td><%= total %></td>
            <td><%= link_to ' 情報入力に進む',new_public_order_path,class: 'btn btn-success  text-light' %></td>
          </tbody>
        </table>
      </div>
      <div class="row col-6 offset-3">
        <div class="row col-6">
          <div class="text-center"><%= link_to ' 買い物を続ける',public_items_path,class: 'btn btn-success  text-light' %></div>
        </div>
        <div class="row offset-1 col-5">
          <table class="table table-striped ">
            <tbody>
              <tr>
                <td>合計金額</td>
                <td><%= total %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>  
  <div class="row col-7 offset-5 text-center　mx-auto">
    <div><%= link_to ' 情報入力に進む',new_public_order_path,class: 'btn btn-success  text-light' %></div>
  </div>
  </div>
</div>
