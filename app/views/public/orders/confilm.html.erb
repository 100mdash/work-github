<div class="container">
  <div class="row">
    <div class="mx-auto">
      <table>
        <therd>
          <h2>ご注文情報確認</h2>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
          <tr>
            <th>送料</th>
            <th></th>
          </tr>
        </therd>
        <tbody>
          <% @sum=0 %>
          <% @cart_items.each do |cart_item| %>

            <tr>
              <td>
               <%= attachment_image_tag cart_item.item, :image %>
               <%= cart_item.item.name %>
             </td>
             <td>
               <%= cart_item.item.add_tax_price.to_s(:delimited) %>
              </td>
              <td>
                <%= cart_item.count %>
              </td>
              <td>
                <%= (cart_item.item.add_tax_price.to_s(:delimited)).to_i* cart_item.count.to_i %>
                <% @sum+=(cart_item.item.add_tax_price.to_s(:delimited)).to_i* cart_item.count.to_i %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <table>
        <tr>
          <td>送料</td>
          <td><%= @delivery_fee %></td>
        </tr>
        <tr>

        <tr>
          <td>商品合計</td>
          <td><%= @sum %></td>
        </tr>
          <td>請求金額</td>
          <td><%= @sum.to_i+@delivery_fee.to_i %></td>
        </tr>
      </table>
      <div>
        <p>
          <h2>支払方法</h2>
          <%= @order.method_of_payment %>
        </p>
      </div>
      <div>
        <p>
          <h2>お届け先</h2>
          <%= @order.shipping_zip_code %></br>
          <%= @order.shipping_address %></br>
        </p>
        <%= @order.shipping_name %>
      </div>
      <%= form_with model: @order,url: public_orders_path, local:true do |f| %>
        <%= f.hidden_field :method_of_payment %>
        <%= f.hidden_field :shipping_zip_code %>
        <%= f.hidden_field :shipping_address %>
        <%= f.hidden_field :shipping_name %>
        <%= f.hidden_field :total_price, :value => (@sum) %>
        <%= f.hidden_field :delivery_fee, :value => @delivery_fee %>
        <%= f.submit '注文を確定する', class: "btn btn-success btn-lg" %>
      <% end %>
    </div>
  </div>
</div>

