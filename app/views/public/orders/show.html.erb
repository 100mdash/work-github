<div class="container">
  <h2 class="py-4">注文履歴詳細</h2>
  <div class="row">
    <div class="row col-7">
      <table class="table table-striped table-bordered">
        <h4 class="pb-2">注文情報</h4>
        <tr>
          <td>注文日</td>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <td>配送先</td>
          <td>
            <%= @order.shipping_zip_code %>
            <%= @order.shipping_address %>
            <%= @order.shipping_name %>
          </td>
        </tr>
        <tr>
          <td>支払方法</td>
          <td><%= @order.method_of_payment %></td>
        </tr>
        <tr>
          <td>ステータス</td>
          <td><%= @order.status %></td>
        </tr>
      </table>
    </div>  
    <div class="row col-3 offset-2 mx-auto">
      <table class="table table-striped table-bordered">
      <h4>請求情報</h4>
        <tr>
          <td>商品合計</td>
          <td><%= @order.total_price %></td>
        </tr>
        <tr>
          <td>送料</td>
          <td><%= @delivery_fee %></td>
        </tr>
        <tr>
          <td>ご請求額</td>
          <td><%= @order.total_price.to_i+@delivery_fee.to_i %></td>
        </tr>
      </table>
    </div>
  </div>
  
  <div class="row py-5 mx-auto"> 
    <div class="row">  
      <table class="table table-striped table-bordered ">
        <h4 class="pb-2">注文内容</h4>
        <thead>
          <th>商品</th>
          <th>単価（税込）</th>
          <th>個数</th>
          <th>小計</th>
        </thead>
        <tbody>
          <% @order_details.each do |f| %>
            <tr>
              <td><%= f.item.name %></td>
              <td><%= f.item.add_tax_price.to_s(:delimited) %></td>
              <td><%= f.count %></td>
              <td><%= f.item.add_tax_price.to_s(:delimited).to_i* f.count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>  
  </div>
</div>