<div class="container">
  <div class="row">
    <div class="mx-auto">
      <h2>注文履歴詳細</h2>
      <table>
        <h3>注文情報</h3>
        <tr>
          <td>注文日</td>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <td>配送先</td>
          <td>
            <%= @order.shipping_zip_code %>
            <%= @order.shipping_address %>
            <%= @order.shipping_name %>
          </td>
        </tr>
        <tr>
          <td>支払方法</td>
          <td><%= @order.method_of_payment %></td>
        </tr>
        <tr>
          <td>ステータス</td>
          <td><%= @order.status %></td>
        </tr>
      </table>
      <table>
        <h3>請求情報</h3>
        <tr>
          <td>商品合計</td>
          <td><%= @order.total_price %></td>
        </tr>
        <tr>
          <td>送料</td>
          <td><%= @delivery_fee %></td>
        </tr>
        <tr>
          <td>ご請求額</td>
          <td><%= @order.total_price.to_i+@delivery_fee.to_i %></td>
        </tr>
      </table>
      <table>
        <h3>注文内容</h3>
        <thead>
          <th>商品</th>
          <th>単価（税込）</th>
          <th>個数</th>
          <th>小計</th>
        </thead>
        <tbody>
          <% @order_details.each do |f| %>
            <tr>
              <td><%= f.item.name %></td>
              <td><%= f.item.add_tax_price.to_s(:delimited) %></td>
              <td><%= f.count %></td>
              <td><%= f.item.add_tax_price.to_s(:delimited).to_i* f.count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>