
<div class="container">
  <div class="row">
    <div class="col-8 mx-auto">
      <h5>検索結果</h5>
      <% if @value.blank? %>
        <h4 class="text-center">該当する商品はありません</h4>
      <% else %>
      <% @datas.each do |data| %>
      <table class="table">
        <tr>
          <td>
            <%= link_to public_item_path(data.id) do %>
            <%= attachment_image_tag data, :image, size: "190x150", class: "img_hover" %>
            <% end %>
          </td>
          <td><%= data.name %></td>
          <td>￥<%= data.price.to_s(:delimited) %>(税抜)</td>
        </tr>
      </table>
      <% end %>
      <% end %>
    </div>
  </div>
</div>

