<% if @value.blank? || @datas.empty? %>
  検索結果がありません。
<% else %>
  <% @datas.each do |data| %>
    <% if data.is_active != false %>
    <div>
      <%= link_to public_item_path(data.id) do %>
        <%= attachment_image_tag data, :image, size: "190x150", class: "img_hover" %><br>
      <% end %>
      <p><%=  data.name %></p><br>
      <p>￥<%= data.price.to_s(:delimited) %>(税抜)</p>
    </div>
    <% end %>
  <% end %>
<% end %>