<div class='container'>
  <div class='row'>
    <div class='col-md-12'>
      <h2><% @customer.first_name %>さんの会員詳細</h2>
      <div>
        <p>
          会員ID
          <%= @customer.id %>
        </p>
        <p>
          氏名
          <%= @customer.first_name %>
          <%= @customer.secound_name %>
        </p>
        <p>
          フリガナ
          <%= @customer.first_name_alias %>
          <%= @customer.secound_name_alias %>
        </p>
        <p>
          郵便番号
          <%= @customer.zip_code %>
        </p>
        <p>
          住所
          <%= @customer.address %>
        </p>
        <p>
          電話番号
          <%= @customer.tel_number %>
        </p>
        <p>
          メールアドレス
          <%= @customer.email %>
        </p>
        <p>
          会員ステータス
          <%= @customer.is_deleted %>
        </p>
      </div>
      <td><%= link_to 'Edit', edit_admin_customer_path, class: "btn btn-sm btn-success" %></td>
      <td><%= link_to '注文履歴一覧を見る', admin_path, class: "btn btn-sm btn-success" %></td>

    </div>
  </div>
</div>
