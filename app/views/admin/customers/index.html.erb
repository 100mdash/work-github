<div class="container">
  <div class= 'row'>
    <div class='mx-auto'>
      <table>
        <therd>
          会員一覧
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </therd>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= customer.first_name %></td>
              <td><%= customer.email %></td>
              <td>
                <% if customer.is_deleted == false %>退会済
                <% else %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>