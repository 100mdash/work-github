<div class="container">
  <div class= 'row'>
    <div class='mx-auto'>
      <table>
        <therd>
          注文履歴一覧
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </therd>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.created_at %></td>
              <td><%= order.shipping_name %></td>
              <td><%= order.order_details.count %></td>
              <td><%= order.status %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div><%= link_to ' 注文履歴詳細へ飛んでほしいな',admin_path(current_admin),class: 'btn btn-success  text-light' %></div>
    </div>
  </div>
</div>