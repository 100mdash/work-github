<div class="container py-5">
  <h5>注文履歴一覧</h5>
    <div class="row">
      <div class="col my-2">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>購入日時</th>
              <th>購入者</th>
              <th>注文個数</th>
              <th>注文ステータス</th>
            </tr>
          </thead>
          <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td>
                <%= link_to admin_path(current_admin) do %>
                <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
                <% end %>
              </td>
              <td><%= order.shipping_name %></td>
              <td><%= order.order_details.count %></td>
              <td><%= order.status %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <%= paginate @prducts %>
</div>