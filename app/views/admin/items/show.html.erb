<div class="container py-5">
  <h5>商品詳細</h5>
  <div class="row my-5">
    <div class="col-4 mx-5">
      <%= attachment_image_tag @item, :image, :fill,300,300 %>
    </div>
    <div class="col-5">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre.name %></td>
          </tr>
          <tr>
            <td>
              税込価格</br>
              (税抜価格)
            </td>
            <td>
              <%= @item.price.to_s(:delimited) %>
              (<%= @item.add_tax_price.to_s(:delimited) %>)円
            </td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <% if @item.is_active == true %>
              <td>販売中</td>
            <% else %>
              <td>販売停止中</td>
            <% end %>
            <td>
              <%= link_to "編集する" ,edit_admin_item_path(@item),class: "btn btn-success" %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

