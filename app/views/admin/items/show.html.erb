<h2>商品詳細</h2>
<%=attachment_image_tag @item, :image, :fill,300,300%>
<table class="table">
  <tr>
    <td>商品名</td>
    <td><%= @item.name %></td>
  </tr>
  <tr>
    <td>商品説明</td>
    <td><%= @item.introduction %></td>
  </tr>
  <tr>
    <td>ジャンル</td>
    <td><%= @item.genre.name %></td>

    <td>
      税込価格</br>
      (税抜き価格)
    </td>
    <td><%= @item.price %>(<%= @item.add_tax_price.to_s(:delimited) %>)円</td>
  </tr>
  <tr>
    <% if @item.is_active==true%>
    <td>販売ステータス</td>
     <td>
          <p>販売中</p>
        </td>  
          <%else%>
          <td>
          <p>販売停止中</p>
          </td>
    <%end%>
  </tr>
</table>
<%= link_to "編集する" ,edit_admin_item_path(@item) %>
