<div class="container py-5">
  <h5>商品一覧</h5>
  <%= link_to "", new_admin_item_path,class: "fas fa-plus-square fa-2x" %>
    <div class="row">
      <div class="col my-2">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜き価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <% @items.each do |item| %>
          <tbody>
            <tr>
              <td><%= item.id %></td>
              <td>
                <%= link_to admin_item_path(item.id) do %>
                  <%= attachment_image_tag(item, :image, :fill, 50, 50) %>
                  <%= item.name %>
                <% end %>
              </td>
              <td><%= item.price %>円</td>
              <td><%= item.genre.name %></td>
              <% if item.is_active == true %>
                <td>販売中</td>  
              <% else %>
                <td>販売停止中</td>
              <% end %>
            </tr>
          </tbody>
          <% end %>
        </table>
      </div>
    </div>
</div>