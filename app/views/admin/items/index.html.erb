<div class="container">
  <div class="row">

  <h2>商品一覧</h2><span>(全<%= @items.count %>件)</span>
  <%= link_to "", new_admin_item_path,class: "fas fa-plus-square fa-2x" %>
  <table class="table">
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item|%>
      <tr>
        <td><%=item.id%></td>
        <td>
          <%= link_to admin_item_path(item) do %>
            <%= attachment_image_tag(item, :image, :fill, 50, 50) %>
            <%=item.name%>
          <% end %>
        </td>
        <td><%=item.price%>円</td>
        <td><%=item.genre.name%></td>
        <% if item.is_active==true%>
        <td>
          <p>販売中</p>
        </td>
          <%else%>
          <td>
          <p>販売停止中</p>
          </td>
      </tr>
      <%end%>
    </tbody>
    <%end%>
  </table>
  </div>
</div>