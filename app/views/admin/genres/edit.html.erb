<div class="container py-5">
  <h5>ジャンル編集</h5>
    <div class="row">
      <div class="col-10 py-5">
        <%= form_with model:@genre, url:admin_genre_path, local:true do |f| %>
          <%= f.label :name, 'ジャンル名' %>
          <%= f.text_field :name,class: "mx-5"%>
          <%= f.submit '変更を保存',class: 'btn btn-success' %>
        <% end %>
      </div>
    </div>
</div>