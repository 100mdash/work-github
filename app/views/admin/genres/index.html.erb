<div class="container py-5">
  <h5>ジャンル一覧・追加</h5>
    <div class="row">
      <div class="col-10 py-5">
        <%= form_with model: @genre,url: admin_genres_path, local:true do |f| %>
          <%= f.label :name, 'ジャンル名' %>
          <%= f.text_field :name, placeholder: "ジャンル名",class: "mx-5" %>
          <%= f.submit "新規登録",class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-5 py-5">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>ジャンル</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <td><%= genre.name %></td>
                <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
</div>
