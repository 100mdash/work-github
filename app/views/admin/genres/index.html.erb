<div class="container py-5">
  <div class="row">
    <h5>ジャンル一覧・追加</h5>
      <%= form_with model: @genre,url: admin_genres_path, local:true do |f| %>
      <div class="form">
        <%= f.label :name, 'ジャンル名' %>
        <%= f.text_field :name %>
        <%= f.submit "新規登録",class:"btn btn-success" %>
      </div>
      <% end %>
      <table class="table">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
  <th>
    <tr>ジャンル</tr>
    <tr></tr>
  </th>
  <% @genres.each do |genre| %>
  <tr>
    <td><%= genre.name %></td>
    <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-success" %></td>
  </tr>
  <% end %>
</table>
    
    
  </div>
