<% if @items.empty? %>
  <h2>該当する商品はありません</h2>
<% end %>
  <% @items.each do |data| %>
    <div>
      <%= link_to admin_item_path(data.id) do %>
        <%= attachment_image_tag data, :image, size: "190x150", class: "img_hover" %><br>
      <% end %>
      <p><%=  data.name %></p><br>
      <p>￥<%= data.price.to_s(:delimited) %>(税抜)</p>
    </div>
<% end %>