<div class="container py-5">
  <%= render "customers/shared/error_messages", resource: resource %>
  <h5>新規会員登録</h5>
  <div class="row">
    <div class="col-8 my-2">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td><%= f.label :名前 %></td>
            <td><%= f.text_field :first_name, class: 'form-control customer_first_neme' %></td>
            <td><%= f.text_field :secound_name, class: 'form-control customer_secound_name' %></td>
          </tr>
          <tr>
            <td><%= f.label :フリガナ %></td>
            <td><%= f.text_field :first_name_alias, class: 'form-control customer_first_neme_alias' %></td>
            <td><%= f.text_field :secound_name_alias, class: 'form-control customer_secound_name' %></td>
          </tr>
          <tr>
            <td><%= f.label :メールアドレス %></td>
            <td><%= f.email_field :email, autocomplete: "email", class: 'form-control customer_email' %></td>
          </tr>
          <tr>
            <td><%= f.label :郵便番号（ハイフンなし） %></td>
            <td><%= f.text_field :zip_code, class: 'form-control customer_zip_code' %></td>
          </tr>
          <tr>
            <td><%= f.label :住所 %></td>
            <td><%= f.text_area :address, class: 'form-control customer_address' %></td>
          </tr>
          <tr>
            <td><%= f.label :電話番号（ハイフンなし） %></td>
            <td><%= f.text_field :tel_number, class: 'form-control customer_tel_number' %></td>
          </tr>
          <tr>
            <td>
              <%= f.label :パスワード %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em>
              <% end %>
            </td>
            <td><%= f.password_field :password, autocomplete: "new-password", class: 'form-control customer_password' %></td>
          </tr>
          <tr>
            <td><%= f.label :パスワード（確認用） %></td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control customer_password' %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "新規登録",class: "btn btn-success" %></td>
          </tr>
        </tbody>
      </table>
      <% end %>
     <h5>すでに登録済みの方</h5>
     <p>
       <%= link_to "こちら", new_customer_session_path %>からログインを行ってください
     </p>
    </div>
  </div>
</div>