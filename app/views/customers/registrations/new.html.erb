<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>


  <div class="field">
    <%= f.label :名前 %>
    <%= f.text_field :first_name, class: 'form-control customer_first_neme' %>
    <%= f.text_area :secound_name, class: 'form-control customer_secound_name' %>
  </div>
  <div class="field">
    <%= f.label :フリガナ %>
    <%= f.text_field :first_name_alias, class: 'form-control customer_first_neme_alias' %>
    <%= f.text_area :secound_name_alias, class: 'form-control customer_secound_name_alias' %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <div class="field">
    <%= f.label :郵便番号 %>
    <%= f.text_area :zip_code, class: 'form-control customer_zip_code' %>
  </div>
  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_area :address, class: 'form-control customer_address' %>
  </div>
  <div class="field">
    <%= f.label :電話番号 %>
    <%= f.text_area :tel_number, class: 'form-control customer_tel_number' %>
  </div>
  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認用） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>
 <p>すでに登録済みの方</p>
      <div>
        <p>
          <%= link_to "こちら", new_customer_session_path, class: "glyphicon glyphicon-pencil btn btn-success" %>
          からログインを行ってください
        </p>
      </div>

