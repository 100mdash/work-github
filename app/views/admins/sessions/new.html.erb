<div class="container py-5">
  <h4>管理者ログイン</h4>
    <div class="row">
      <div class="col-6 mx-auto">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control admin-mail" %>
        </div>

        <div class="form-group">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "current-password",class: "form-control admin-password" %>
        </div>

        <div class="actions">
          <%= f.submit "Log in",class: "btn btn-primary" %>
        </div>
        <% end %>
      </div>
    </div>
</div>
